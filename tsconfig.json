{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    // "src/**/*.vue"
  ],
  "compilerOptions": {
    "strict": false,
    "importsNotUsedAsValues": "preserve",
    "preserveValueImports": false,
    "isolatedModules": false,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}